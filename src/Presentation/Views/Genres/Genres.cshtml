@model IEnumerable<Nika1337.Library.Presentation.Models.Genres.GenreViewModel>

@{
    ViewData["Title"] = "Genres";
}

<div class="container-fluid p-5">
    <h2 class="text-center m-3">@ViewData["Title"]</h2>
    <div class="row justify-content-between">
        <div class="col-md-6" style="width: fit-content">
            <div class="dropdown mb-4" style="width: fit-content">
                <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false" style="min-width: 200px">
                    <span id="sortLabel">
                        @(ViewData["SortedBy"] switch
                        {
                            "name" => "Name: A - Z",
                            "nameDesc" => "Name: Z - A",
                            _ => "Sort"
                        })
                    </span>
                </button>
                <ul class="dropdown-menu" style="width: fit-content">
                    <li><a class="dropdown-item sort-option" data-sort="name">Name: A - Z</a></li>
                    <li><a class="dropdown-item sort-option" data-sort="nameDesc">Name: Z - A</a></li>
                </ul>
            </div>
        </div>
        <div class="col-md-6" style="width: fit-content">
            <div class="row  mb-4">
                <div class="col-md-8" style="width: fit-content">
                    <div class="row flex-nowrap">
                        <div class="col-md-8" style="width: fit-content">
                            <div class="input-group">
                                <input type="text" id="searchTerm" class="form-control" placeholder="Search genres...">
                                <button class="btn btn-outline-secondary" type="button" onclick="searchGenres()">Search</button>
                            </div>
                        </div>
                        <div class="col-md-4 d-flex justify-content-center align-items-center" style="width: fit-content">
                            <i id="cardViewIcon" class="fas fa-th-large toggle-icon mx-2" onclick="toggleView('card')" title="Card View"></i>
                            <i id="tableViewIcon" class="fas fa-table toggle-icon mx-2" onclick="toggleView('table')" title="Table View"></i>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 d-flex justify-content-center align-items-center" style="width: fit-content">
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="includeDeleted" onclick="filterGenres()" checked>
                        <label class="form-check-label" for="includeDeleted">Include Deleted</label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="cardView" class="row d-none">
        @foreach (var genre in Model)
        {
            <div class="col-sm-12 col-md-6 col-lg-4 col-xl-3 mb-4 genre-card" data-name="@genre.Name" data-active="@(!genre.DeletedDate.HasValue)">
                <div class="card h-100 shadow-sm d-flex flex-column">
                    <div class="card-header d-flex justify-content-between align-items-center text-white">
                        <span class="card-header-name">@genre.Name</span>
                        @if (!genre.DeletedDate.HasValue)
                        {
                            <span class="badge bg-success badge-sm">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger badge-sm">Deleted</span>
                        }
                    </div>
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div class="property">
                            <span>@genre.Description</span>
                        </div>
                        <div class="mt-auto">
                            <a href="/Books/Genres/@genre.Id" class="btn btn-dark btn-sm btn-block">View Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div id="tableView">
        <div class="table-responsive d-flex justify-content-center">
            <table id="genreTable" class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th class="table-description">Description</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var genre in Model)
                    {
                        <tr class="genre-row" data-name="@genre.Name" data-active="@(!genre.DeletedDate.HasValue)">
                            <td>@genre.Name</td>
                            <td class="table-description">@genre.Description</td>
                            <td>
                                @if (!genre.DeletedDate.HasValue)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Deleted</span>
                                }
                            </td>
                            <td class="no-wrap">
                                <a href="/Books/Genres/@genre.Id" class="btn btn-dark btn-sm">View Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="myfab-container">
        <a href="/Genres/CreateGenre" class="btn btn-primary btn-lg shadow-sm myfab">
            Create Genre
        </a>
    </div>
</div>

@section Scripts {
    <script src="~/js/Books/Genres/Genres.js"></script>
    <script src="~/js/Shared/CardTableList.js"></script>
}

@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/Shared/CardTableList.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Books/Genres/Genres.css" asp-append-version="true" />
}
