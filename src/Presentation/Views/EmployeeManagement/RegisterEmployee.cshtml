@model Nika1337.Library.Presentation.Models.EmployeeRegistrationViewModel

@{
    ViewData["Title"] = "Register Employee";
}

<div class="container d-flex justify-content-center align-items-start pt-5">
    <div class="card" style="width: 100%; max-width: 1000px; margin: 5rem;">
        <h5 class="card-header">@ViewData["Title"]</h5>
        <div class="card-body">
            <form asp-action="RegisterEmployee" asp-controller="EmployeeManagement" method="post" class="needs-validation" novalidate>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label asp-for="FirstName"></label>
                            <input asp-for="FirstName" class="form-control" required>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label asp-for="LastName"></label>
                            <input asp-for="LastName" class="form-control" required>
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label asp-for="Username"></label>
                            <input asp-for="Username" class="form-control" required>
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label asp-for="IdNumber"></label>
                            <input asp-for="IdNumber" class="form-control" required>
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label asp-for="DateOfBirth"></label>
                            <input asp-for="DateOfBirth" class="form-control" type="date" required>
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label asp-for="Salary"></label>
                            <input asp-for="Salary" class="form-control" required>
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col-md-8 mb-3">
                        <div class="form-group">
                            <label asp-for="SelectedRoles">Roles</label>
                            <div>
                                @foreach (var role in Model.AvailableRoles)
                                {
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="@role.Value" name="SelectedRoles" value="@role.Value">
                                        <label class="form-check-label" for="@role.Value">@role.Text</label>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 d-flex align-items-end justify-content-end mb-3">
                        <button type="submit" class="btn btn-dark w-100" style="min-height: 45px;">Register</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                var form = document.getElementsByClassName('needs-validation')[0];
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            }, false);
        })();
    </script>
}