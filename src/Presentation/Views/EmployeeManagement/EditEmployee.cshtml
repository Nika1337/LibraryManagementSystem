@using Nika1337.Library.ApplicationCore.Abstractions
@model Nika1337.Library.Presentation.Models.EmployeeEditViewModel
@{
    ViewData["Title"] = "Edit Employee";
    var oldUsername = Model.NewUsername;
    var userAction = Model.TerminationDate == null ? "Terminate" : "Renew";
    var actionButtonClass = Model.TerminationDate == null ? "btn-danger" : "btn-warning";
}

<div class="container d-flex justify-content-center align-items-start pt-5">
    <div class="card" style="width: 100%; max-width: 1000px; margin: 5rem;">
        <h5 class="card-header">@ViewData["Title"]</h5>
        <div class="card-body">
            <form asp-action="EditEmployee" asp-controller="EmployeeManagement" asp-route-username="@oldUsername" method="post" class="needs-validation" novalidate>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label asp-for="FirstName"></label>
                            <input asp-for="FirstName" class="form-control" required>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label asp-for="LastName"></label>
                            <input asp-for="LastName" class="form-control" required>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label asp-for="NewUsername"></label>
                            <input asp-for="NewUsername" class="form-control" required>
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label asp-for="IdNumber"></label>
                            <input asp-for="IdNumber" class="form-control" required>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label asp-for="DateOfBirth"></label>
                            <input asp-for="DateOfBirth" class="form-control" type="date" required>
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label asp-for="Salary"></label>
                            <input asp-for="Salary" class="form-control" required>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-8 mb-3">
                        <div class="form-group">
                            <label asp-for="SelectedRoles">Roles</label>
                            <div>
                                @foreach (var role in Model.AvailableRoles)
                                {
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="@role.Value" name="SelectedRoles" value="@role.Value" @(Model.SelectedRoles.Contains(role.Value) ? "checked" : "")>
                                        <label class="form-check-label" for="@role.Value">@role.Text</label>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 d-flex flex-column justify-content-end align-items-end mb-3">
                        <button type="submit" class="btn btn-dark w-100 mb-2" style="min-height: 45px;">Save Changes</button>
                        <button type="button" class="btn @actionButtonClass w-100" style="min-height: 45px;" data-bs-toggle="modal" data-bs-target="#actionModal">@userAction</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Action Confirmation Modal -->
<div class="modal fade" id="actionModal" tabindex="-1" aria-labelledby="actionModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="actionModalLabel">Confirm Termination</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to @userAction this employee?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn @actionButtonClass" id="confirmAction">@userAction</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                var form = document.getElementsByClassName('needs-validation')[0];
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                }, false);
            }, false);

            document.getElementById('confirmAction').addEventListener('click', function () {
                var username = '@oldUsername';
                var token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                fetch(`/EmployeeManagement/ToggleTerminateEmployee/${username}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token
                    }
                }).then(response => {
                    if (response.ok) {
                        window.location.href = '/EmployeeManagement/AllEmployees';
                    } else {
                        alert('An error occurred while trying to @userAction the employee.');
                    }
                });
            });
        })();
    </script>
}
