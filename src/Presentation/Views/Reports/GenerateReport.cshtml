@model Nika1337.Library.Presentation.Models.Reports.GenerateReportViewModel

@{
    Layout = "_DetailLayout";
    ViewData["Title"] = "Generate Report";

    var breadcrumbItems = new List<BreadcrumbItem>
    {
        new()
        {
            Label = "Reports",
            Url = "/Reports"
        }
    };
}

@section Breadcrumb {
    @await Html.PartialAsync("_BreadcrumbPartial", breadcrumbItems)
}



<form asp-action="GenerateReport" method="post" class="needs-validation" novalidate>
    <div class="row justify-content-center">
        <div class="col-xl-8">
            <div class="card mb-4">
                <h5 class="card-header">Generate Report</h5>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <div class="form-group">
                                <label asp-for="Subject" class="form-label"></label>
                                <select asp-for="Subject" class="form-select" id="Subject"></select>
                                <span asp-validation-for="Subject" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-12 mb-3">
                            <div class="form-group">
                                <label asp-for="Metric" class="form-label"></label>
                                <select asp-for="Metric" class="form-select" id="Metric"></select>
                                <span asp-validation-for="Metric" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <div class="form-group">
                                <label asp-for="Year" class="form-label"></label>
                                <input asp-for="Year" class="form-control" type="number" />
                                <span asp-validation-for="Year" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex align-items-end justify-content-end myfab-container">
                        <button type="submit" class="btn btn-primary myfab">Generate Report</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <!-- Include Choices JavaScript (latest) -->
    <script src="https://cdn.jsdelivr.net/npm/choices.js/public/assets/scripts/choices.min.js"></script>

    <script src="~/js/Reports/GenerateReport.js"></script>

    <script>
        const subject = @Model.Subject;
        const metric = @Model.Metric;
    </script>

}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/choices.js/public/assets/styles/choices.min.css" />
}
