@model Nika1337.Library.Presentation.Models.Authors.AuthorCreateViewModel
@{
    Layout = "_DetailLayout";
    ViewData["Title"] = "Add Author";
}

<form asp-route="Books/Authors/AddAuthor" method="post" class="needs-validation" novalidate>
    <div class="row justify-content-center">
        <div class="col-xl-8">
            <div class="card mb-4">
                <h5 class="card-header">Add Author</h5>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="form-group">
                                <label asp-for="Name" class="form-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="form-group">
                                <label asp-for="DateOfBirth" class="form-label"></label>
                                <input asp-for="DateOfBirth" class="form-control" type="date" />
                                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <div class="form-group">
                                <label asp-for="Biography" class="form-label"></label>
                                <textarea asp-for="Biography" class="form-control" rows="5"></textarea>
                                <span asp-validation-for="Biography" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <div class="form-check">
                            <input asp-for="IsAlive" class="form-check-input" type="checkbox" />
                            <label asp-for="IsAlive" class="form-check-label"></label>
                        </div>
                        <span asp-validation-for="IsAlive" class="text-danger"></span>
                    </div>

                    <div class="d-flex align-items-end justify-content-end myfab-container">
                        <button type="submit" class="btn btn-primary myfab">Add</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Error {
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="d-flex flex-column align-items-center">
            <div class="alert alert-danger" style="width: fit-content">
                @Model.ErrorMessage
            </div>
        </div>
    }
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
