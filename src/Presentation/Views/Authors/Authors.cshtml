@model Nika1337.Library.Domain.RequestFeatures.PagedList<Nika1337.Library.Presentation.Models.Authors.AuthorViewModel>

@{
    ViewData["Title"] = "Authors";
    Layout = "_ServerSideCardTableLayout";

    string Truncate(string value, int maxLength)
    {
        if (string.IsNullOrEmpty(value)) return value;
        return value.Length <= maxLength ? value : value.Substring(0, maxLength) + "...";
    }
}

@section Paging {
    @await Html.PartialAsync("_PagingPartial", Model.MetaData)
}

@section Cards {
    @foreach (var author in Model)
    {
        <a class="col-sm-12 col-md-6 col-lg-4 col-xl-3 mb-4 list-card" data-name="@author.Name" data-dateofbirth="@author.DateOfBirth" data-isalive="@author.IsAlive" data-active="@(!author.DeletedDate.HasValue)" href="/Books/Authors/@author.Id" style="text-decoration:none; color:black">
            <div class="card h-100 shadow-sm d-flex flex-column">
                <div class="card-header d-flex justify-content-between align-items-center text-white">
                    <span class="card-header-name">@author.Name</span>
                    @if (!author.DeletedDate.HasValue)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Deleted</span>
                    }
                </div>
                <div class="card-body d-flex flex-column justify-content-between">
                    <div class="property">
                        <span class="text-muted">Biography:</span>
                        <span>@Truncate(author.Biography, 100)</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center flex-wrap">
                        <div class="property">
                            <span class="text-muted">Date of Birth:</span>
                            <span>@author.DateOfBirth.ToShortDateString()</span>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    }
}


@section Table {
    <table id="table" class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Biography</th>
                <th>Date of Birth</th>
                <th style="width: 8%">Alive</th>
                <th style="width: 8%">Status</th>
                <th style="width: 8%">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var author in Model)
            {
            <tr class="table-row" data-name="@author.Name" data-dateofbirth="@author.DateOfBirth" data-isalive="@author.IsAlive" data-active="@(!author.DeletedDate.HasValue)">
                    <td>@author.Name</td>
                    <td class="table-biography">@Truncate(author.Biography, 50)</td>
                    <td>@author.DateOfBirth.ToShortDateString()</td>
                    <td>@author.IsAlive</td>
                    <td>
                        @if (!author.DeletedDate.HasValue)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Deleted</span>
                        }
                    </td>
                    <td>
                        <a href="/Books/Authors/@author.Id" class="btn btn-dark btn-sm no-wrap">View Profile</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@section Fab {
    <a href="/Books/Authors/AddAuthor" class="btn btn-primary btn-lg shadow-sm myfab">
        Add Author
    </a>
}
@section Scripts {
    <script>
        const viewName = "Authors";
    </script>
}
