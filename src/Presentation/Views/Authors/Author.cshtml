@model Nika1337.Library.Presentation.Models.Authors.AuthorDetailViewModel
@{
    Layout = "_DetailLayout";
    ViewData["Title"] = Model.Name;
    var userAction = Model.DeletedDate == null ? "Delete" : "Renew";
    var actionButtonClass = Model.DeletedDate == null ? "btn-danger" : "btn-warning";
}


<form asp-route="Books/Authors" method="post" class="needs-validation" novalidate>
    <div class="row justify-content-center">
        <div class="col-xl-8">
            <div class="card mb-4">
                <h5 class="card-header">Author Information</h5>
                <div class="card-body">
                    <input type="hidden" asp-for="Id" />
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="form-group">
                                <label asp-for="Name" class="form-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="form-group">
                                <label asp-for="DateOfBirth" class="form-label"></label>
                                <input asp-for="DateOfBirth" class="form-control" type="date" />
                                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <div class="form-group">
                                <label asp-for="Biography" class="form-label"></label>
                                <textarea asp-for="Biography" class="form-control" rows="5"></textarea>
                                <span asp-validation-for="Biography" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 d-flex flex-md-column justify-content-end  mb-3">
                            <div class="form-group">
                                <div class="form-check">
                                    <input asp-for="IsAlive" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsAlive" class="form-check-label"></label>
                                </div>
                                <span asp-validation-for="IsAlive" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6  mb-3">
                            <div class="form-group">
                                <label asp-for="DeletedDate" class="form-label"></label>
                                <input asp-for="DeletedDate" class="form-control" type="date" readonly />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="d-flex align-items-end justify-content-end myfab-container">
                            <div class="d-flex flex-column">
                                <button type="submit" class="btn btn-primary myfab mb-2">Save Changes</button>
                                <button type="button" class="btn @actionButtonClass myfab" data-bs-toggle="modal" data-bs-target="#actionModal">@userAction</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Error {
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="d-flex flex-column align-items-center">
            <div class="alert alert-danger" style="width: fit-content">
                @Model.ErrorMessage
            </div>
        </div>
    }
}


@section ActionModal {
    @await Html.PartialAsync("_ActionConfirmationModalPartial", new Nika1337.Library.Presentation.Models.Shared.ActionConfirmationModalViewModel(userAction, actionButtonClass, "Author"))
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/Shared/ActionModal.js"></script>
    <script src="~/js/Books/Authors/Author.js"></script>
    <script>
        var id = '@Model.Id';
        var userAction = '@userAction';
    </script>
}
